{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prewatch": "npm run bootstrap",
    "lint": "eslint -c .eslintrc.json \"packages/*/src/**/*.[jt]s\"",
    "build": "npm run build:cjs && npm run build:es",
    "build:cjs": "lerna exec --ignore nightingale-showcase-app -- webpack --config ../../webpack.config.js --mode=production",
    "build:es": "lerna exec --ignore nightingale-showcase-app -- \"test -f src/index.ts && tsc src/index.ts --sourceMap --noImplicitAny --moduleResolution Node --target ES6 --declaration --outDir dist/es/  || exit 0\"",
    "watch:es": "lerna exec --parallel --ignore nightingale-showcase-app -- \"test -f src/index.ts && tsc src/index.ts --sourceMap --noImplicitAny --moduleResolution Node --target ES6 --declaration --outDir dist/es/ --watch || exit 0\"",
    "watch": "lerna exec --ignore nightingale-showcase-app --parallel -- webpack --config ../../webpack.config.js --mode=development -w",
    "clean": "lerna exec --ignore nightingale-showcase-app --parallel -- rimraf dist node_modules",
    "link-all": "lerna exec --ignore nightingale-showcase-app --parallel yarn link",
    "start": "lerna run start --stream",
    "build-site": "lerna run build-site --stream",
    "test": "jest",
    "test:types": "tsc --project tsconfig.check.json",
    "prelerna-publish": "npm run build",
    "lerna-publish": "lerna publish"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-typescript": "7.12.7",
    "@babel/runtime": "7.12.5",
    "@testing-library/dom": "7.29.0",
    "@typescript-eslint/eslint-plugin": "4.10.0",
    "@typescript-eslint/parser": "4.10.0",
    "@webcomponents/webcomponentsjs": "2.5.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "browser-sync": "2.26.13",
    "camelcase": "6.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-react": "7.21.5",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "raw-loader": "4.0.2",
    "ts-loader": "8.0.12",
    "typescript": "4.1.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "worker-loader": "3.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn build && yarn lint && yarn test"
    }
  },
  "workspaces": [
    "app",
    "packages/*"
  ]
}
